<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="uk.org.nickmoore.runtrack"
    android:versionCode="3"
    android:versionName="1.1.1">

    <uses-sdk
        android:minSdkVersion="7"
        android:targetSdkVersion="18" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_android_netrunner_robot"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name=".ui.MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.GameActivity" />
        <activity android:name=".ui.OpponentActivity"
            android:label="@string/opponent_activity_label" />
        <activity android:name=".ui.GameHistoryActivity"
            android:label="@string/game_history_activity_label" />
        <activity android:name=".ui.PlayerStatsActivity"
            android:label="@string/player_stats_activity_label" />
    </application>

</manifest>
