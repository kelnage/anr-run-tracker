<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="uk.org.nickmoore.runtrack"
    android:versionCode="1"
    android:versionName="1.0">

    <uses-sdk
        android:minSdkVersion="7"
        android:targetSdkVersion="18" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_android_netrunner_robot"
        android:label="@string/app_name"
        android:theme="@style/AppTheme"
        android:debuggable="true">
        <activity
            android:name=".ui.MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.GameActivity" />
        <activity android:name=".ui.OpponentActivity" />
        <activity android:name=".ui.GameHistoryActivity" />
        <activity android:name=".ui.PlayerStatsActivity" />
    </application>

</manifest>
