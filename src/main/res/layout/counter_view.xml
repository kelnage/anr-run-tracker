<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:runtrack="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true" android:focusableInTouchMode="true"
    tools:context=".ui.CounterView">

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/top"
        android:layout_gravity="center"
        android:contentDescription="@string/up_arrow"
        android:src="@android:drawable/arrow_up_float" />

    <uk.org.nickmoore.runtrack.ui.InvertibleEditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/zero"
        android:id="@+id/counter"
        android:layout_gravity="center"
        android:inputType="numberSigned" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bottom"
        android:layout_gravity="center"
        android:contentDescription="@string/down_arrow"
        android:clickable="false"
        android:src="@android:drawable/arrow_down_float"/>
</LinearLayout>