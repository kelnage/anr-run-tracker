<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:runtrack="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true" android:focusableInTouchMode="true"
    tools:context=".ui.CounterView"
    android:orientation="vertical">

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:id="@+id/top"
        android:layout_gravity="center"
        android:contentDescription="@string/up_arrow"
        android:src="@drawable/up_arrow"
        android:layout_weight="1" />

    <uk.org.nickmoore.runtrack.ui.InvertibleEditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/zero"
        android:id="@+id/counter"
        android:layout_gravity="center"
        android:inputType="numberSigned"
        android:layout_weight="1"
        android:gravity="center_vertical|center_horizontal" />

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:id="@+id/bottom"
        android:layout_gravity="center"
        android:contentDescription="@string/down_arrow"
        android:clickable="false"
        android:src="@drawable/down_arrow"
        android:layout_weight="1"
        android:baselineAlignBottom="false" />
</LinearLayout>